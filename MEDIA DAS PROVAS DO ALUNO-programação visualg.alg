algoritmo "media das provas do aluno"


var

nome:caractere
n1:inteiro
n2:inteiro
n3:inteiro

inicio

escreval("digite o nome do aluno:")
leia(nome)
escreval("qual a sua primeira nota?")
leia(n1)
escreval(" qual sua segunda nota?")
leia(n2)
escreval("qual sua terceira nota?")
leia(n3)
escreva("a media das notas de ",nome," é ",(n1+n2+n3)/3)

fimalgoritmo